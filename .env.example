# Server Configuration
PORT=3000
NODE_ENV=development

# HTTPS/WSS Configuration (optional, for production)
ENABLE_HTTPS=false
SSL_KEY_PATH=./certs/server-key.pem
SSL_CERT_PATH=./certs/server-cert.pem

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Agent Authentication
AGENT_TOKEN=your_secure_token_here

# JWT Authentication
JWT_SECRET=change-this-to-a-random-secret-key-in-production
JWT_EXPIRES_IN=24h

# Guardrails
ALLOWED_COMMANDS=dir,ipconfig,systeminfo,tasklist,ping,netstat,wmic,powershell
BLOCKED_KEYWORDS=format,del /f,rmdir /s,shutdown,reboot,reg delete
MAX_COMMAND_LENGTH=500
COMMAND_TIMEOUT_MS=30000
REQUIRE_CONFIRMATION=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=10
MAX_COMMANDS_PER_SESSION=50

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/agent.log
